{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <nav class="nav navbar">
            <div class="col-sm-6">
                <h1>Liste des utilisateurs</h1>
                {{ include('_flash_messages.html.twig') }}                    
            </div>   
            <a class="btn btn-success" href="{{ path('back_user_create') }}">Ajouter</a>
        </nav>

        <table class="table" >
            <thead>
                <tr >
                    <th>Id</th>
                    <th>Pseudo</th>
                    <th class="d-none d-xl-table-cell">Image</th>
                    <th class="d-none d-md-table-cell">Email</th>
                    <th class="d-none d-md-table-cell">Password</th>
                    <th class="d-none d-lg-table-cell">RÃ´le</th>
                    <th class="d-none d-lg-table-cell">Active</th>
                    <th class="col-1 text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td class="d-none d-xl-table-cell">{{ user.image }}</td>
                    <td class="d-none d-md-table-cell">{{ user.email }}</td>
                    <td class="d-none d-md-table-cell wrap-text">{{ user.password }}</td>
                    <td class="d-none d-lg-table-cell">{{ user.roles|join(', ') }}</td>
                    <td class="d-none d-lg-table-cell">{{ user.active }}</td>
                    <td class= "d-sm-flex">
                        <a  class="buttons btn btn-warning" href="{{ path('back_user_update', {'id': user.id}) }}">Editer</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
