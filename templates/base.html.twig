        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav id="mainNav" class="navbar navbar-dark navbar-expand-lg bg-dark py-lg-4" style="padding: 23px 0px;">
