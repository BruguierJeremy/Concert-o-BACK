                            <li class="nav-item"><a class="nav-link" href="{{ path('back_home') }}">Accueil</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('back_event_list') }}">Evénements</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('back_genre_list') }}">Genres</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('back_user_list') }}">Utilisateurs</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}
